FloatLayout:
    canvas.before:
        Color:
            rgba: 0.2, 0, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        id: background
        source: ""
        allow_stretch: True
        keep_ratio: True
    BoxLayout:
        orientation: "vertical"
        size_hint: None, None
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        Label:
            id: label
            text: "ghbd re"
            size_hint: None, None
            size: self.texture_size
            bold: True
        Button:
            id: button1
            text: "жмай на мя"
            background_color: 0.5, 0, 0.5, 1
            size_hint: None, None
            size: self.texture_size[0] + 20, self.texture_size[1] + 10
            on_press: app.change_text_and_button()

